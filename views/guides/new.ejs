<%- include('../partials/header') %>
    <div class='main-container form-container'>
        <form action="/guides" method="post" class="new-guide-form">
            <div class="inner-form-container">
                <h3 id='sub-title'>Title</h3>
                <input class="primary-input" type="text" name="title" id="name" required>
            </div>
            <div class="inner-form-container">
                <h3 id='sub-title'>Action</h3>
                <input class="primary-input" type="text" name="action" id="action" required>
            </div>
            <div class="inner-form-container">
                <h3 id='sub-title'>Component</h3>
                <input class="primary-input" type="text" name="app_component" id="app-component" required>
              </div>
            <div id="form-buttons-container">
                <a href="/guides" class="main-btn cancel-button">Cancel</a>
                <button type="submit" class="main-btn create-btn" id='form-btn'>Create!</button>
            </div>
        </form>
    </div>
<%- include('../partials/footer') %>